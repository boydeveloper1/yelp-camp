<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campgrounds</h1>
        <!-- This makes a colum of 6 that is in the middle -->
        <div class="col-md-6 offset-md-3">
            <!-- The action makes sure that we are hitting/sending back data to the actual camground we are editing
and then we override it to a put request -->
            <!-- novalidated attr inorder for the browser to leave validation for BS
            the Js for the valisation added to boilerplate -->
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                required enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        placeholder="Enter Campground Title" value="<%=campground.title%>" required autofocus>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" required id="location" name="campground[location]"
                        placeholder="Enter Campground Location" value="<%=campground.location%>">
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="image" class="form-label">Add more images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                    <!-- <label class="form-label" for="image">Add Images</label>
                    <input type="file" name="image" id="image" multiple> -->
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <!-- Every image will have a value of it's file name which is fed into the name attribute in an -->
                            <!-- array when we pass req.body  -->
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" required placeholder="0.00"
                            aria-label="Username" aria-describedby="price-label" name="campground[price]"
                            value="<%=campground.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <!-- We do not use the value="" attribute on a textarea -->
                    <textarea class="form-control" type="text" id="description" required name="campground[description]"
                        placeholder="Enter Campground Description"><%=campground.description%>></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Back to Campgrounds</a>
        </div>
    </div>